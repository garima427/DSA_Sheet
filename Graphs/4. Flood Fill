void dfs(int sr,int sc, vector<vector<int>> &grid,vector<vector<int>> &vis,int inColor,int newColor){
  int n = grid.size();
  int m = grid[0].size();
  
  vis[sr][sc]=1;
  grid[sr][sc]=newColor;

  int dr[]={0,-1,0,1};
  int dc[]={-1,0,1,0};
  
  for(int i=0; i<4; i++){
    int nr = sr+dr[i];
    int nc = sc+dc[i];
    if(nr>=0 && nr<n && nc>=0 && nc<m && !vis[nr][nc] && grid[nr][nc]==inColor){
        dfs(nr,nc,grid,vis,inColor,newColor);
    }
   }
  }  

vector<vector<int>> floodFill(int sr,int sc, vector<vector<int>> &grid,int newColor){
  int n = grid.size();
  int m = grid[0].size();
  vector<vector<int>> vis(n,vector<int>(m,0));
  int inColor = grid[sr][sc];
  dfs(sr,sc,grid,vis,inColor,newColor);

  return grid;
}
