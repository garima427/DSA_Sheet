void dfs(int node,vector<vector<int>> &adj,vector<int> &vis){
  vis[node]=1;
  for(auto adjNode : adj[node]){
    if(!vis[adjNode]){
      dfs(adjNode,adj,vis);
    }
  }
}
int numberOfProvinces(int n,vector<vector<int>> &adj){
  vector<int> vis(n+1,0);
  int provinces = 0;
  for(int i=1; i<=n; i++){
    if(!vis[i]){
      dfs(i,adj,vis);
      provinces++;
    }
  }
  return provinces;
}
