Node* mergeLL(Node* list1, Node* list2){
  Node* dummyNode = new Node(-1);
  Node* tail = dummyNode;
  while(list1 && list2){
    if(list1->data<list2->data){
      tail->next = list1;
      tail = list1;
      list1 = list1->next;
    }
    else{
      tail->next = list2;
      tail = list2;
      list2 = list2->next;
   }
  }
  while(list1){
     tail->next = list1;
      tail = list1;
      list1 = list1->next;
  }
  while(list2){
     tail->next = list2;
      tail = list2;
      list2 = list2->next;
  }
 return dummyNode->next;
}
  
Node* sortLL(Node* head){
  if(!head || !head->next)
      return head;
  Node* middle = findMiddle(head);
  Node* left = sortLL(head);
  Node* right = sortLL(middle->next);
  middle->next = nullptr; 
  return mergeLL(left,right);
}
